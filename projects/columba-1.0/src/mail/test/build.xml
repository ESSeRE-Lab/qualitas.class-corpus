<?xml version="1.0"?>

<project name="mail.test" default="test">
	<target name="compile">
		<echo message="Compile Mail test"/>
		<javac target="1.4" srcdir="${src.mail.test}" destdir="${test.dest}" encoding="ISO-8859-1" debug="${debugbuild}">
			<classpath refid="compile.test.classpath"/>
			<exclude name="**/*.html"/>
			<exclude name="**/*.xml"/>
		</javac>
	</target>

	<target name="test" description="runs all tests for columba. Failures only reported on console.">
		<echo message="Test Mail"/>		
		<junit fork="no" haltonfailure="no">
			<classpath refid="run.test.classpath" />
			<formatter type="xml"/>
			<batchtest todir="${report.base}" >
				<fileset dir="${src.mail.test}">
					<include name="**/*Test*.java"/>
					<exclude name="**/AllTests.java"/>
				</fileset>
			</batchtest>
		</junit>
	</target>
	
</project>
